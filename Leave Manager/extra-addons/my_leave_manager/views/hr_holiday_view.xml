    </record>

    <record id="hr_holidays.hr_holidays_menu_manager_payroll_to_report" model="ir.ui.menu">
        <field name="active">False</field>
    </record>


    <report
        id="report_mypdf"
        string="My PDF Report"
        model="hr.leave"
        report_type="qweb-pdf"
        name="my_leave_manager.hr_leave_report_mypdf"
        file="my_leave_manager.hr_leave_report_mypdf"
        attachment_use="True"
    />


    <!-- Định nghĩa template cho báo cáo -->
    <template id="hr_leave_report_mypdf">
        <main>
            <t t-call="web.external_layout">
                <div class="header">
                    <!-- Định dạng và hiển thị logo -->
                    <div class="logo">
                        <img src="/my_leave_manager/static/img/logo.png" alt="Logo" />
                    </div>
                    <!-- Hiển thị tiêu đề -->
                    <div class="title">
                        <h1>Thống Kê Đăng Ký Nghỉ Phép</h1>
                    </div>
                </div>
                <div class="content">
                    <!-- Hiển thị bảng dữ liệu -->
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã NV</th>
                                <th>Nhân Viên</th>
                                <th>Chức Vụ</th>
                                <th>Phòng Ban</th>
                                <th>Diễn giải</th>
                                <th>Số Ngày</th>
                                <th>Ngày Bắt Đầu</th>
                                <th>Ngày Kết Thúc</th>
                                <th>Loại Nghỉ Phép</th>
                                <th>Trạng Thái</th>
                            </tr>
                        </thead>
                        <!-- <tbody>
                    <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td><t t-esc="doc.sequence_number"/></td>
                            <td><t t-esc="doc.employee_code"/></td>
                            <td><t t-esc="doc.employee_name"/></td>
                            <td><t t-esc="doc.job_title"/></td>
                            <td><t t-esc="doc.department"/></td>
                            <td><t t-esc="doc.description"/></td>
                            <td><t t-esc="doc.number_of_days"/></td>
                            <td><t t-esc="doc.start_date"/></td>
                            <td><t t-esc="doc.end_date"/></td>
                            <td><t t-esc="doc.leave_type"/></td>
                            <td><t t-esc="doc.status"/></td>
                        </tr>
                    </t>
                </tbody> -->
                    </table>
                </div>
            </t>
        </main>

    </template>


    <record id="action_report_mypdf" model="ir.actions.act_window">
        <field name="name">My PDF Report</field>
        <field name="type">ir.actions.act_url</field>
        <field name="res_model">hr.leave</field>
        <field name="url">my_leave_manager.report_mypdf</field>
        <field name="target">new</field>
        <field name="groups"
            eval="[(6, 0, [ref('hr_holidays.group_hr_holidays_manager'),
    ref('hr_holidays.group_hr_holidays_user')])]" />
    </record>


    <menuitem
        id="menu_hr_holidays_report_test"
        name="Reporting"
        parent="hr_holidays.menu_hr_holidays_root"
        sequence="99"
        action="action_report_mypdf"
        groups="hr_holidays.group_hr_holidays_manager,hr_holidays.group_hr_holidays_user" />

</odoo>