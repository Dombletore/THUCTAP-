<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_edi_payslip" model="mail.template">
            <field name="name">Payslip: Send by email</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="partner_to">${object.employee_id.id}</field>
            <field name="subject">Salary Slip for ${object.dates} - ${object.employee_id.name}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.employee_id.name}
                        <br/>
                        <br/>
                        Attached is your salary slip for ${object.dates}. It contains all the necessary details, including your earnings, deductions, and net salary.
                        <br/>
                        <br/>
                        Should you have any questions or require any clarification regarding the information provided, please don't hesitate to reach out to the HR department. We're here to assist you.
                        <br/>
                        <br/>
                        Thank you for your hard work and dedication. We value your contributions to our company.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="hr_payroll.action_report_payslip"/>
            <field name="report_name">
                Payslip_${(object.dates or '').replace('/','_')}${(object.employee_id.name or '').replace(' ','_')}
            </field>
            <field name="lang">${object.employee_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
