<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="hr_payslip_send_wizard_form">
            <field name="name">hr.payslip.send.form</field>
            <field name="model">hr.payslip.send</field>
            <field name="arch" type="xml">
                <form string="Payslip Send">

                    <field name="composition_mode" invisible="1"/>
                    <field name="composer_id" invisible="1"/>
                    <field name="slip_ids" invisible="1"/>
                    <field name="email_from" invisible="1"/>
                    <field name="mail_server_id" invisible="1"/>

                    <field name="is_email" invisible="1"/>

                    <div class="text-left d-inline-block mr8"
                         attrs="{'invisible': ['|', ('is_email','=', False), ('payslip_without_email', '=', False)]}">
                        <field name="payslip_without_email" class="mr4"/>
                    </div>

                    <div name="mail_form" attrs="{'invisible': [('is_email', '=', False)]}">
                        <!-- visible wizard -->
                        <div attrs="{'invisible': [('composition_mode', '=', 'mass_mail')]}">
                            <span attrs="{'invisible': [('composition_mode', '!=', 'mass_mail')]}">
                                <strong>Email mass mailing</strong>
                                on
                                <span>the selected records</span>
                            </span>
                            <span>Followers of the document and</span>
                            <label for="employee_ids" string="Recipients"/>
                            <field name="employee_ids" widget="tags_email"
                                   placeholder="Add contacts to notify..."
                                   context="{'force_email':True, 'show_email':True}"
                                   attrs="{'invisible': [('composition_mode', '=', 'mass_mail')]}"/>
                            <field name="subject" placeholder="Subject..."
                                   attrs="{'required': [('is_email', '=', True), ('composition_mode', '=', 'comment')]}"/>
                            <field name="body" style="border:none;" options="{'style-inline': true}"/>
                        </div>
                        <div attrs="{'invisible': [('composition_mode', '=', 'mass_mail')]}">
                            <field name="attachment_ids" widget="many2many_binary" string="Attach a file"
                                   nolabel="1" colspan="2"
                                   attrs="{'invisible': [('composition_mode', '=', 'mass_mail')]}"/>
                        </div>
                        <field name="template_id" options="{'no_create': True, 'no_edit': True}"
                               context="{'default_model': 'hr.payslip'}"/>
                    </div>

                    <footer>
                        <button string="Send"
                                attrs="{'invisible': ['|', ('is_email', '=', False)]}"
                                name="send_action" type="object" class="send btn-primary o_mail_send"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <button icon="fa-lg fa-save" type="object" name="save_as_template" string="Save as new template"
                                attrs="{'invisible': ['|', ('composition_mode', '=', 'mass_mail'), ('is_email', '=', False)]}"
                                class="pull-right btn-secondary" help="Save as a new template"/>
                    </footer>

                </form>
            </field>
        </record>

        <act_window
                name="Send"
                id="payslip_send"
                multi="True"
                key2="client_action_multi"
                res_model="hr.payslip.send"
                src_model="hr.payslip"
                view_mode="form"
                target="new"
                view_type="form"
                context="{
                'default_template_id': ref('hr_payroll_vn.email_template_edi_payslip'),
                'mark_payslip_as_sent': True,
            }"/>

    </data>

</odoo>
